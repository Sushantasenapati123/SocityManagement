@model Bank.Domain.Branch.BranchEntity
@{

}
@if (ViewBag.msg != null)
{
    <script>
        alert("@ViewBag.msg", function () {
            window.location.href = "/Branch/ViewBranchs";
        });
    </script>
}


<div class="row">
    <div class="container">
        <div class="col-md-12 col-sm-12">
            <div class="card">
                <div class="card-header">
                    <ul class="nav nav-tabs nav-fill" role="tablist">
                        <a class="nav-item nav-link active" asp-controller="Branch" asp-action="AddBranchs" data-toggle="tooltip" id="SchemeExcalAdd">

                            Add
                        </a>
                        <a class="nav-item nav-link" data-toggle="tooltip" asp-controller="Branch" asp-action="ViewBranchs" id="SchemeExcalView">

                            View
                        </a>

                    </ul>
                    <div class="indicatorslist">
                        <p class="text-danger">(*) Indicates mandatory </p>
                    </div>

                </div>
                <div class="card-body">
                    <div class="container">
                        <form method="post" asp-controller="Branch" asp-action="EditBranchs" onsubmit="return Val()">
                            <input type="hidden" asp-for="branch_id" />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Enter Branch Name</label>
                                        <input type="text" asp-for="Branch_Name" class="form-control" id="txtbranchname" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Enter Branch Address</label>
                                        <input type="text" asp-for="Branch_address" class="form-control" id="Txtaddress" />
                                    </div>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Select the Signature</label>
                                        <input type="file" asp-for="photosignature" class="form-control-file" id="lblBsignature" required />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="submit" class="btn btn-outline-success" value="Submit" id="btnadd" />
                                        <input type="reset" class="btn btn-outline-danger" value="Reset" />
                                    </div>
                                </div>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script>
    function Val() {
        if (('#Branch_Name').val() == "") {
            alert("Please enter Branch name");
            return false;
        }
    }
</script>
